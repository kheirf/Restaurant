<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag 'Your name' %>
    <%= f.text_field :customerName %>
  </div>
  <div class="field">
    <%= label_tag 'Booking Date' %>
    <%= f.date_select :bookingDate %>
  </div>
  <div class="field">
    <%= label_tag 'Number of people' %>
    <%= f.number_field :peopleNo %>
  </div>
  <div class="field">
    <%= label_tag 'Contact Number' %>
    <%= f.text_field :contactNumber %>
  </div>

<div class="field">
    <%= label_tag 'Email' %>
    <%= f.text_field :email %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
