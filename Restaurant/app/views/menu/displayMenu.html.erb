

<h2>Starters</h2>

<% start=Starter.all() %>
<table class="table">
	
	<tr>
		<% start.each do |d| %>
		<td> <%= d.name %> </td>
		<td> <%= d.description %> </td>
		<td> <%= d.price %> </td>
	</tr>
	<% end %>
</table>

